/**
 * @param {number[]} temperatures
 * @return {number[]}
 */
var dailyTemperatures = function(temperatures) {
    /* More Optimized - O(n) time, O(n) space
        Consider a stack and answer array
        At each index:
            Compare with values from the stack
            Pop the value in stack if current > popped value and update results
            Push the value after all comparisons and increment index
    */

    if(temperatures.length === 0) {
        return [];
    }

    const answer = Array(temperatures.length).fill(0);
    const stack = [[0, temperatures[0]]];
    for(let i=1; i<temperatures.length; i++) {
        while(stack.length > 0 && stack[stack.length - 1][1] < temperatures[i]) {
            const previous = stack.pop();
            answer[previous[0]] = i - previous[0];
        }

        stack.push([i, temperatures[i]]);
    }

    return answer;

    /* Brute Force - O(n^2) time, O(n) space
    
    const answer = [];
    for(let i=0; i<temperatures.length - 1; i++) {
        let ctr = 1;
        let isFound = false;
        for(let j=i+1; j<temperatures.length; j++) {
            if(temperatures[j] > temperatures[i]) {
                isFound = true;
                break;
            } else {
                ctr++;
            } 
        }

        if(isFound) {
            answer.push(ctr);
        } else {
            answer.push(0);
        }
    }

    answer.push(0);
    */
    
    return answer;
};

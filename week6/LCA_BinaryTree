/**
 * Definition for a binary tree node.
 * function TreeNode(val) {
 *     this.val = val;
 *     this.left = this.right = null;
 * }
 */
/**
 * @param {TreeNode} root
 * @param {TreeNode} p
 * @param {TreeNode} q
 * @return {TreeNode}
 */
var lowestCommonAncestor = function(root, p, q) {
    /*
        It is either that
            1. current node is p or q (therefore one or the other is a child)
            2. current node has p and q in different subtrees

        O(n) time, O(1) space
    */

    if(root === null) return null;

    if(root === p || root === q) return root;

    const left = lowestCommonAncestor(root.left, p, q);
    const right = lowestCommonAncestor(root.right, p, q);
    if(left && right) return root; //lca where p and q are in different subtrees
    return left || right
};
